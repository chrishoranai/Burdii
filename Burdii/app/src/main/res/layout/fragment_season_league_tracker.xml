<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SeasonLeagueTrackerFragment">

    <TextView
        android:id="@+id/seasonTrackerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Season League Tracker"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <Spinner
        android:id="@+id/weekSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/scorecardContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">
        <!-- Read-only scorecard for the selected week will be displayed here -->
    </LinearLayout>

    <Button
        android:id="@+id/startNewLeagueRoundButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start New League Round"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/finishSeasonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish Season"/>

</LinearLayout>